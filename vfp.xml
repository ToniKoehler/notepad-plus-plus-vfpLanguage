<?xml version="1.0" encoding="UTF-8" ?>
<NotepadPlus>
	<functionList>
		<parser 
			id="visualfoxpro.xml" 
			displayName="Vfp"  
			commentExpr="(?m:((?i:&amp;&amp;)([\t ].*?)?$)|((?i:*)([\t ].*?)?$))"
		> 
			<classRange
				mainExpr="(?is)^[\t ]*DEFINE\s+CLASS.*?ENDDEFINE"
				displayMode="node"
			>
				<className>
					<nameExpr expr="(?i:CLASS)\s+['&quot;]?[\w]+" />
					<nameExpr expr="['&quot;]?[\w]+$" />
					<nameExpr expr="[\w]+" />
				</className>
				
				<function mainExpr="(?m)^[\t ]*(?i:DEFINE\s+CLASS[^\r\n]*|(?:PROC|FUNC)\w*[\t ]+['&quot;]?[\w]+['&quot;]?)">
					<functionName>
						<funcNameExpr expr="(?i:^[\t ]*DEFINE\s+CLASS\s+)\K.*|(?i:(?:PROC|FUNC)\w*[\t ]+)\K['&quot;]?[\w]+['&quot;]?"/>
						<!-- FIX: ':' und '\' (sowie '/' und '.') erlauben -->
						<funcNameExpr expr="[\w\s&quot;&apos;:\\/.]+"/>
					</functionName>
				</function>
			</classRange>

			<function
				mainExpr="(?m)^[\t ]*(?i:(?:(?:PROTECTED|HIDDEN)[\t ]+)?(?:STATIC[\t ]+)?(?:PROCEDURE|PROC|FUNCTION|FUNC)).*?(?:\(|$)"
			>
				<functionName>
					<nameExpr expr="(?i:(?:(?:PROTECTED|HIDDEN)[\t ]+)?(?:STATIC[\t ]+)?(?:PROCEDURE|PROC|FUNCTION|FUNC)).*?(?:\(|$)"/>
					<nameExpr expr="(?i:(?:PROCEDURE|PROC|FUNCTION|FUNC)).*?(?:\(|$)"/>
					<nameExpr expr="[A-Za-z_][\w]*(?=[\t ]*(?i:\(|$))"/>
				</functionName>
			</function>
		</parser>
	</functionList>
</NotepadPlus>
